{
  "private": true,
  "workspaces": [
    "apps/*",
    "docs/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=./packages/*",
    "clean": "turbo run clean && rm -rf node_modules && rm -rf supabase",
    "predb:build": "tsx scripts/generate-schema-md.ts",
    "db:build": "run-s db:kill db:start setup",
    "postdb:build": "tsx scripts/generate-db-types.ts",
    "db:init": "turbo run db:init",
    "db:start": "run-p db:start:database db:start:redis",
    "db:start:database": "yarn workspace @carbon/database supabase start",
    "db:start:redis": "yarn workspace @carbon/redis db:start",
    "db:kill": "run-p db:kill:supabase db:kill:redis",
    "db:kill:supabase": "yarn workspace @carbon/database supabase stop",
    "db:kill:redis": "yarn workspace @carbon/redis db:kill",
    "db:types": "yarn workspace @carbon/database db:types",
    "db:migrate": "yarn workspace @carbon/database db:migrate",
    "db:migrate:new": "yarn workspace @carbon/database supabase migration new",
    "db:push": "turbo run db:push",
    "db:pull": "turbo run db:pull",
    "db:seed": "turbo run db:seed --no-cache",
    "db:migrate:force": "turbo run db:migrate:force --no-cache",
    "dev": "turbo run dev --no-cache --parallel --continue --filter=./apps/* --filter=./packages/*",
    "dev:apps": "turbo run dev --no-cache --parallel --continue --filter=./apps/*",
    "dev:docs": "turbo run dev --no-cache --parallel --continue --filter=./docs/*",
    "dev:packages": "turbo run dev --no-cache --parallel --continue --filter=./packages/*",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "initialize": "run-s db:init db:start",
    "lint": "turbo run lint",
    "setup": "turbo run setup",
    "test": "turbo run test"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.0",
    "tsx": "^3.12.1",
    "turbo": "^1.6.3",
    "supabase": "^1.27.1"
  },
  "packageManager": "yarn@1.22.19",
  "engines": {
    "node": ">=16"
  }
}
